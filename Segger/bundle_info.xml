<BundleInfo name="ChimeraX-Segger" version="1.0"
	    package="chimerax.segger"
  	    minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>Segment map</Synopsis>
  <Description>Segment density maps using Segger watershed methods.</Description>

  <DataFiles>
    <DataFile>volseg.png</DataFile>
  </DataFiles>

  <Categories>
    <Category name="Volume data"/>
  </Categories>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.9"/>
    <Dependency name="ChimeraX-Geometry" version=">=1.0"/>
    <Dependency name="ChimeraX-MapData" version=">=2.0"/>
    <Dependency name="ChimeraX-MapFilter" version=">=2.0"/>
    <Dependency name="ChimeraX-MapFit" version=">=2.0"/>
    <Dependency name="ChimeraX-UI" version=">=1.0"/>
  </Dependencies>

  <Providers manager="data formats">
    <Provider name="Segmentation" synopsis="Segger segmentation" category="Volume Data"
		suffixes=".seg" nicknames="segger"
		reference_url="https://cryoem.slac.stanford.edu/ncmi/resources/software/segger" />
  </Providers>

  <Providers manager="open command">
    <Provider name="Segmentation" want_path="true" />
  </Providers>

  <Providers manager="save command">
    <Provider name="Segmentation" />
  </Providers>

  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>Tool :: Segment Map :: Volume Data :: Segment density maps using Segger algorithms</ChimeraXClassifier>
    <ChimeraXClassifier>Tool :: Fit to Segments :: Volume Data :: Fit atomic models in segmented maps</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
